@page
@model Bloggie.Web.Pages.Admin.Blogs.ListModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Blog Posts List</h1>
    </div>
</div>


<div class="container">
    <a asp-page="Add" class="btn btn-primary">Create New</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
                <td> </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var blogPost in Model.BlogPosts)
            {
                <tr>
                    <td>@blogPost.Id</td>
                    <td>@blogPost.Heading</td>
                    <td><a href="/Admin/Blogs/Edit/@blogPost.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
